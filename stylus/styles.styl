@import 'nib/vendor'
@import 'fonts.styl'

azulito = #4393fa
grisesito = #2c2c2c
azulito_claro = #68a6ef
moradito = #9500b5
moradito_claro = #a839b5

header
	background rgba(black,0.8)
	color white
	position relative
	overflow hidden
	
.controls
	animation 1s parpadeo_navigation 3
	.navigate-right
		border-left-color black !important
	.navigate-left
		border-right-color black !important
	.navigate-up
		border-bottom-color black !important
	.navigate-down
		border-top-color black !important
	
.buttons
	margin-top 1.5em
	a
		padding 0.5em !important
		border 4px solid black !important
		color white !important
		background #4393fa
		transition 0.3s !important
		
		&:hover
			color white !important
			background #2e363f
			text-decoration none !important
	
.me
	figure
		margin 1em 0.5em 1em 1em

		img
			width 60px
			border-radius 7px
			
.name
	position absolute
	top 2em
	left 5.5em
	
	strong
		font-size 1.5em
		a
			color white
			&:hover
				color azulito
		
	.largo
		display none
		

.share
	iframe
		position absolute !important
		width 75px
		height 20px
		
		&:nth-child(1)
			top 1em
			right 0.5em
			
		&:nth-child(2)
			top 2.6em
			right 1em
			
		&:nth-child(3)
			top 4.2em
			right 0.5em
			

.home_init
	a
		position absolute
		top 0.9em
		left 4.4em
		font-size 2em
		text-decoration none
		color white
		&:hover
			color azulito
		strong
			display none
.yo
	.f_yo
		img
			border-radius 50%
			border 4px solid grisesito
			
.social_icons
		width 392px
		position relative
		margin 0 auto
		figure
			img
				float left
				margin-right 0.5em
				opacity .8
				animation 1s parpadeo infinite
			

 .abajo
	background azulito
	padding 0.2em
	display inline-block
	border 4px solid grisesito
	animation 1s parpadeo infinite
	color white
	
.antes
	a
		display inline-block
		
	.curso_git
		background azulito
		padding 0.3em
		color black !important
		border-radius 4px
		border 2px solid black
		transition .3s !important
		
		&:hover
			background azulito
			color white !important
			text-decoration none !important
		
	.navidad
		background azulito_claro
		color black !important
		margin-top 0.5em
		padding 0.3em
		border-radius 5px
		transition .3s !important
		
		&:hover
			background azulito
			
.clases
	h2
		color white
		padding 0.5em !important
		border 4px solid white !important
		border-radius 10px
		
	.proceso
		background #fad542
		
.arbol
	.working_div
		position relative
		margin 0 auto
		width 804px
		figure
			img
				width 250px
				float left
				margin-right 0.5em
			
.config
	.f_user_name
		img
			width 300px
			
.setenta
	.f_help
	.f_init
		img
			width 500px
			
	.f_commit
		img
			width 300px
			
	.f_soft
	.f._mixed
	.f_hard
		img
			width 220px
			

.workflows
	.f_team
	.f_propio
		img
			width 240px
		
.ambientes
	.f_ambientes
		img
			width 350px
			
.gh-pages
	.key
		img
			border 4px solid grisesito
			

.aviso
		background #ff303b
		color white 
		padding 0.5em !important
		border 4px solid #fad542 !important
		animation 0.5s parpadeo infinite
		
		strong
			color black
			
.margin-top
	margin-top 0.5em !important
	
.uppercase
	text-transform uppercase
		
			
section
	strong
		em
			color #fa3c99
			
@keyframes parpadeo_navigation
	40%
		transform scale(1.5)
		
	20%	
	60%
		transform scale(1)
		
@keyframes parpadeo
	40%
		transform scale(1.1)
		
	20% 
	60%
		transform scale(0.8)
		
@media screen and (min-width: 767px)
	.share
		iframe
			position absolute
			width 75px
			height 20px
			
			&:nth-child(1)
				top 2.5em
				right 11.7em
				
			&:nth-child(2)
				right 6.5em
				top 2.5em
				
			&:nth-child(3)
				top 2.5em
				right 1em
				

	.name
		.corto
			display none
		
		.largo
			display block
			

	.home_init
		a
			left 9.7em

		
		
		
		